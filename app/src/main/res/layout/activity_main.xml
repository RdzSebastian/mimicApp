<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:background="@android:color/white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/colorAccent"
        android:orientation="vertical"
        android:id="@+id/equipoTop">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/equipoJugando"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/nombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="@string/equipoX"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="center_horizontal|center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Equipo1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/equipo1"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <android.support.v4.widget.Space
                android:layout_width="20dp"
                android:layout_height="0dp"/>

            <TextView
                android:id="@+id/puntos1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/puntajeInicial"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center_horizontal|center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Equipo2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/equipo2"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <android.support.v4.widget.Space
                android:layout_width="20dp"
                android:layout_height="0dp"/>

            <TextView
                android:id="@+id/puntos2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/puntajeInicial"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:id="@id/r1"
        android:layout_below="@+id/equipoTop">




    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@android:color/white"/>

    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="@color/colorAccent"
        android:orientation="vertical"
        android:layout_below="@+id/r1"
        android:id="@+id/peli">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp">


            <Button
                android:id="@+id/buttonEmpezar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:onClick="startTimer"
                android:background="@drawable/custom_button"
                android:text="@string/empezar"/>

            <TextView
                android:id="@+id/tiempo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="@string/time"
                android:textColor="@android:color/white"
                android:textSize="36sp" />


            <Button
                android:id="@+id/buttonAcerto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:onClick="Acierto"
                android:background="@drawable/custom_button"
                android:text="@string/acerto" />



        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp">

            <Button
                android:id="@+id/pelicula"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="buscarPelicula"
                android:padding="10dp"                android:background="@drawable/custom_button"
                android:text="@string/pelicula" />

            <android.support.v4.widget.Space
                android:layout_width="40dp"
                android:layout_height="0dp"/>


            <TextView
                android:id="@+id/PeliculaSelect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/peliculaElegida"
                android:textColor="@android:color/white"
                android:textSize="24sp" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:layout_below="@+id/peli"
        android:id="@+id/r3">

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@android:color/white"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorAccent"
        android:orientation="vertical"
        android:layout_below="@+id/r3"
        android:gravity="center_horizontal|center"
        >


        <Button
            android:id="@+id/button8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/custom_button"
            android:onClick="reseteaContador"
            android:text="@string/reiniciar"
            android:textSize="12sp" />

        </LinearLayout>

</RelativeLayout>
