<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:orientation="vertical"
    >


    <LinearLayout android:orientation="horizontal"
        android:layout_margin="12dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="75dp"
            android:text="Equipo jugando"/>

        <TextView
            android:id="@+id/nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:text="Equipo X"/>

    </LinearLayout>




    <LinearLayout android:orientation="horizontal"
        android:layout_margin="12dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/Equipo1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Equipo1"
            android:layout_marginLeft="100dp"/>

        <TextView
            android:id="@+id/puntos1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:paddingLeft="16dp"
            android:textSize="18sp"/>

    </LinearLayout>




    <LinearLayout android:orientation="horizontal"
        android:layout_margin="12dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/Equipo2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Equipo2"
            android:layout_marginLeft="100dp"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/puntos2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:paddingLeft="16dp"
            android:textSize="18sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dip"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cambio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="cambioDeEquipo"
            android:text="cambio de equipo"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="20dp"
            android:textSize="12sp" />

    </LinearLayout>




    <LinearLayout android:orientation="horizontal"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/buttonTime2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="Acierto"
            android:text="Acerto"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/tiempo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1:00"
            android:textSize="36sp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="20dp"/>

        <Button
            android:id="@+id/buttonTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Empezar"
            android:layout_marginLeft="20dp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/pelicula"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="pelicula"
            android:text="Pelicula"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/PeliculaSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pelicula"
            android:textSize="24sp"
            android:layout_marginLeft="20dp"/>

    </LinearLayout>




    <LinearLayout android:orientation="horizontal"
        android:layout_margin="12dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button8"
            android:layout_width="116dp"
            android:layout_height="34dp"
            android:onClick="reseteaContador"
            android:text="Reiniciar Partida"
            android:textSize="10sp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="100dp"/>

    </LinearLayout>

</LinearLayout>